---
interface Props {
  variant?: "primary" | "secondary" | "ghost";
  href?: string;
  class?: string;
}

const {
  variant = "primary",
  href,
  class: extraClass = "",
} = Astro.props as Props;

const base =
  "inline-flex items-center justify-center rounded-lg px-6 py-3 text-sm font-semibold transition";

const variants = {
  primary:
    "bg-gradient-to-b from-yellow-400 to-yellow-600 text-black shadow-[0_0_30px_rgba(185,138,37,0.45)] hover:opacity-90",
  secondary:
    "border border-white/20 text-white hover:bg-white/5",
  ghost:
    "text-white/70 hover:text-white",
};
---

{href ? (
  <a href={href} class={`${base} ${variants[variant]} ${extraClass}`}>
    <slot />
  </a>
) : (
  <button class={`${base} ${variants[variant]} ${extraClass}`}>
    <slot />
  </button>
)}
