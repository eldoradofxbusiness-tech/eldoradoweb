---
import Section from "../../ui/Section.astro";
import Container from "../../ui/Container.astro";
import Badge from "../../ui/Badge.astro";
import Heading from "../../ui/Heading.astro";
import Text from "../../ui/Text.astro";
import TelegramButton from "../../ui/TelegramButton.astro";
import { useTranslations, getLanguageFromPath } from "../../../i18n/utils";

const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);
---
<Section class="py-32 relative overflow-hidden bg-(--color-canvas-end) z-2">
    <div class="absolute inset-0 bg-slate-900/50 z-0"></div>
  <Container class="relative z-10 max-w-4xl text-center reveal scale">
    <Badge variant="gold" class="mb-6">{t("masterclass.badge")}</Badge>
    <Heading level={2} class="mb-6">{t("masterclass.title")}</Heading>
    <Text muted class="mb-8">{t("masterclass.description")}</Text>

    <div class="grid md:grid-cols-3 gap-6 mb-12 text-sm text-white/70">
      <div class="p-6 rounded-xl bg-white/5 reveal up hero-delay-1 border border-white/5">{t("masterclass.riskManagement")}</div>
      <div class="p-6 rounded-xl bg-white/5 reveal up hero-delay-2 border border-white/5">{t("masterclass.marketStructure")}</div>
      <div class="p-6 rounded-xl bg-white/5 reveal up hero-delay-3 border border-white/5">{t("masterclass.signalExecution")}</div>
    </div>

     <TelegramButton
      type="channel"
      username="RPomaFX"
    >
      {t("masterclass.learnMore")}
    </TelegramButton>
  </Container>
</Section>