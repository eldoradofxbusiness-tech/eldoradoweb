---
import Card from "../../ui/Card.astro";
import Text from "../../ui/Text.astro";
import { useTranslations, getLanguageFromPath } from "../../../i18n/utils";

const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);
---
<div class="grid grid-cols-2 lg:grid-cols-4 gap-y-16 gap-x-12 reveal from-bottom reveal fade">

  <div>
    <Text class="text-5xl font-semibold mb-3">8+</Text>
    <Text muted class="text-xs uppercase tracking-[0.2em]">
      {t("trust.metrics.yearsExperience")}
    </Text>
  </div>

  <div>
    <Text class="text-3xl font-semibold mb-3">XAUUSD Â· BTCUSD</Text>
    <Text muted class="text-xs uppercase tracking-[0.2em]">
      {t("trust.metrics.marketsCovered")}
    </Text>
  </div>

  <div>
    <Text class="text-5xl font-semibold mb-3">300+</Text>
    <Text muted class="text-xs uppercase tracking-[0.2em]">
      {t("trust.metrics.signalsLastYear")}
    </Text>
  </div>

  <div>
    <Text class="text-5xl font-semibold mb-3">40+</Text>
    <Text muted class="text-xs uppercase tracking-[0.2em]">
      {t("trust.metrics.masterclasses")}
    </Text>
  </div>

</div>
