---
import Section from "../../ui/Section.astro";
import Container from "../../ui/Container.astro";
import Heading from "../../ui/Heading.astro";
import Text from "../../ui/Text.astro";
import Badge from "../../ui/Badge.astro";
import ServicesGrid from "./ServicesGrid.astro";
import ScrollReveal from "../../react/ScrollReveal";
---

<Section class="w-full ">
  <Container class="flex items-center justify-center flex-col w-full">

    <!-- Header -->
    <div class="max-w-2xl mb-20 flex flex-col items-center text-center">
      <ScrollReveal client:load>
        <Badge variant="gold">Access</Badge>
      </ScrollReveal>
      <ScrollReveal delay={100} client:load>
        <Heading level={2} class="mt-4 mb-4">
          Services & access
        </Heading>
      </ScrollReveal>
      <ScrollReveal delay={200} client:load>
        <Text muted>
          Choose based on structure, automation level and risk framework.
        </Text>
      </ScrollReveal>
    </div>

    <ServicesGrid />

    <!-- Legal -->
    <div class="mt-20 mb-20 text-right">
      <Text muted class="text-xs">
        Trading involves risk.
        <a
          href="/disclaimer"
          class="ml-1 underline underline-offset-4 hover:text-white transition"
        >
          Read full risk disclosure
        </a>
      </Text>
    </div>

  </Container>
</Section>
