---
import Section from "../../ui/Section.astro";
import Container from "../../ui/Container.astro";
import Heading from "../../ui/Heading.astro";
import Text from "../../ui/Text.astro";
import Badge from "../../ui/Badge.astro";
import ServicesGrid from "./ServicesGrid.astro";
import { useTranslations, getLanguageFromPath } from "../../../i18n/utils";

const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);

const disclaimerPath = lang === "es" ? "/es/disclaimer" : "/disclaimer";
---

<Section class="w-full bg-(--color-canvas-end) z-2 p-8">
  <Container class="flex items-center justify-center flex-col w-full reveal fade-in">

    <div class="max-w-2xl mb-20 flex flex-col items-center text-center">
      <Badge class="badge-glow">{t("servicesPage.badge")}</Badge>
      <Heading level={2} class="mt-4 mb-4">
        {t("servicesPage.title")}
      </Heading>
      <Text muted>
        {t("servicesPage.description")}
      </Text>
    </div>

    <ServicesGrid />

    <div class="mt-20 mb-20 text-right">
      <Text muted class="text-xs">
        {t("servicesPage.riskShort")}
        <a
          href={disclaimerPath}
          class="ml-1 underline underline-offset-4 hover:text-white transition"
        >
          {t("servicesPage.readFullDisclosure")}
        </a>
      </Text>
    </div>

  </Container>
</Section>