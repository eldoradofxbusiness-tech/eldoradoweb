---
import TelegramIcon from "../../components/ui/TelegramIcon.astro";
import InstagramIcon from "../../components/ui/InstagramIcon.astro";
import YoutubeIcon from "../../components/ui/YoutubeIcon.astro";
import { useTranslations, getLanguageFromPath } from "../../i18n/utils";

const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);
---

<footer class="border-t border-white/10 reveal from-bottom fade">
  <div class="mx-auto max-w-7xl px-6 py-16">

    <div class="grid grid-cols-1 gap-12 md:grid-cols-3">

     
      <div class="flex flex-col gap-6">
        
        <div class="flex items-start gap-3">
          <img
            src="/logo.webp"
            alt="ElDoradoFx"
            class="h-14 w-auto"
          />
        </div>

        <p class="text-sm text-white/50 max-w-xs">
          {t("footer.description")}
        </p>


        <div class="flex gap-4 text-white/40">
          <a
            href="https://t.me/RPomaFX"
            target="_blank"
            rel="noopener"
            aria-label="Telegram"
            class="hover:text-white transition"
          >
            <TelegramIcon class="w-5 h-5" />
          </a>

          <a
            href="https://www.instagram.com/eldoradofx_tg"
            target="_blank"
            rel="noopener"
            aria-label="Instagram"
            class="hover:text-white transition"
          >
            <InstagramIcon class="w-5 h-5" />
          </a>

          <a
            href="https://www.youtube.com/@ElDoradoFX-TradingGroup-u4u"
            target="_blank"
            rel="noopener"
            aria-label="YouTube"
            class="hover:text-white transition"
          >
            <YoutubeIcon class="w-5 h-5" />
          </a>
        </div>
      </div>

   
      <div class="flex flex-col gap-4">
        <span class="text-xs uppercase tracking-wide text-white/40">
          {t("footer.navigation")}
        </span>

        <div class="flex flex-col gap-3 text-sm">
          <a href={`${lang === "es" ? "/es" : ""}/about`} class="text-white/70 hover:text-white transition">
            {t("navbar.about")}
          </a>
          <a href={`${lang === "es" ? "/es" : ""}/services`} class="text-white/70 hover:text-white transition">
            {t("navbar.services")}
          </a>
          <a href={`${lang === "es" ? "/es" : ""}/contact`} class="text-white/70 hover:text-white transition">
            {t("navbar.contact")}
          </a>
          <a href={`${lang === "es" ? "/es" : ""}/disclaimer`} class="text-white/70 hover:text-white transition">
            Risk Disclosure
          </a>
        </div>
      </div>

    
      <div class="flex flex-col gap-4">
        <span class="text-xs uppercase tracking-wide text-white/40">
          {t("footer.legal")}
        </span>

        <p class="text-xs leading-relaxed text-white/40">
          {t("footer.disclaimer")}
        </p>
      </div>

    </div>

 
    <div class="mt-16 flex flex-col gap-6 border-t border-white/10 pt-6 md:flex-row md:items-center md:justify-between">

      <span class="text-xs text-white/40">
        {t("footer.copyright").replace("{year}", new Date().getFullYear().toString())}
      </span>

      <a
        href="https://daviddevlopez.com/"
        target="_blank"
        rel="noopener"
        class="text-xs text-white/30 hover:text-white transition"
      >
        {t("footer.developedBy")}
      </a>

    </div>

  </div>
</footer>
