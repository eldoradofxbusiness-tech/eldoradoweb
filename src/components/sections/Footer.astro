---
import TelegramIcon from "../../components/ui/TelegramIcon.astro";
import InstagramIcon from "../../components/ui/InstagramIcon.astro";
import YoutubeIcon from "../../components/ui/YoutubeIcon.astro";
---

<!-- FOOTER -->
<footer class="border-t border-white/10">
  <div class="mx-auto max-w-7xl px-6 py-16">

    <!-- TOP GRID -->
    <div class="grid grid-cols-1 gap-12 md:grid-cols-3">

      <!-- BRAND / SOCIAL -->
      <div class="flex flex-col gap-6">
        <!-- Logo -->
        <div class="flex items-start gap-3">
          <img
            src="/logo.webp"
            alt="ElDoradoFx"
            class="h-14 w-auto"
          />
        </div>

        <p class="text-sm text-white/50 max-w-xs">
          Structured trading, risk-first mindset.
          No promises. No shortcuts.
        </p>

        <!-- Social icons -->
        <div class="flex gap-4 text-white/40">
          <a
            href="https://t.me/ELDORADOFX"
            target="_blank"
            rel="noopener"
            aria-label="Telegram"
            class="hover:text-white transition"
          >
            <TelegramIcon class="w-5 h-5" />
          </a>

          <a
            href="https://instagram.com/eldoradofx"
            target="_blank"
            rel="noopener"
            aria-label="Instagram"
            class="hover:text-white transition"
          >
            <InstagramIcon class="w-5 h-5" />
          </a>

          <a
            href="https://youtube.com/@eldoradofx"
            target="_blank"
            rel="noopener"
            aria-label="YouTube"
            class="hover:text-white transition"
          >
            <YoutubeIcon class="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- NAVIGATION -->
      <div class="flex flex-col gap-4">
        <span class="text-xs uppercase tracking-wide text-white/40">
          Navigation
        </span>

        <div class="flex flex-col gap-3 text-sm">
          <a href="/about" class="text-white/70 hover:text-white transition">
            About
          </a>
          <a href="/services" class="text-white/70 hover:text-white transition">
            Services
          </a>
          <a href="/contact" class="text-white/70 hover:text-white transition">
            Contact
          </a>
          <a href="/disclaimer" class="text-white/70 hover:text-white transition">
            Risk Disclosure
          </a>
        </div>
      </div>

      <!-- LEGAL -->
      <div class="flex flex-col gap-4">
        <span class="text-xs uppercase tracking-wide text-white/40">
          Legal
        </span>

        <p class="text-xs leading-relaxed text-white/40">
          Trading leveraged products involves a high level of risk and may not
          be suitable for all investors. Past performance is not indicative of
          future results.
        </p>

        <div class="flex gap-4 text-xs">
          <a href="/terms" class="hover:text-white transition">
            Terms
          </a>
          <a href="/privacy" class="hover:text-white transition">
            Privacy
          </a>
        </div>
      </div>

    </div>

    <!-- BOTTOM -->
    <div class="mt-16 flex flex-col gap-6 border-t border-white/10 pt-6 md:flex-row md:items-center md:justify-between">

      <span class="text-xs text-white/40">
        © {new Date().getFullYear()} ElDoradoFx. All rights reserved.
      </span>

      <a
        href="https://daviddevlopez.com/"
        target="_blank"
        rel="noopener"
        class="text-xs text-white/30 hover:text-white transition"
      >
        Developed by David López
      </a>

    </div>

  </div>
</footer>
