---
import Section from "../../ui/Section.astro";
import Container from "../../ui/Container.astro";
import Badge from "../../ui/Badge.astro";
import Heading from "../../ui/Heading.astro";
import Text from "../../ui/Text.astro";
import ScrollImage from "../../react/ScrollImage";
import { useTranslations, getLanguageFromPath } from "../../../i18n/utils";

const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);
---

<Section class="relative py-28 overflow-hidden reveal fade">
  <Container>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">


      <div class="hidden lg:block reveal from-bottom-scale">
        <div class="sticky top-32">
          <ScrollImage
            client:visible
            src="/us_traders.webp"
            alt="ElDoradoFx traders"
          />
        </div>
      </div>

      <!-- RIGHT: CONTENT -->
      <div class="flex flex-col gap-6 max-w-xl">

        <Badge class="w-fit">
          {t("howWeGotHere.badge")}
        </Badge>

        <Heading level={2}>
          {t("howWeGotHere.title")}
        </Heading>

        <Text muted class="leading-relaxed">
          {t("howWeGotHere.firstParagraph")}
        </Text>

        <Text muted class="leading-relaxed">
          {t("howWeGotHere.secondParagraph")}
        </Text>

      </div>

      <!-- MOBILE IMAGE -->
      <div class="lg:hidden mt-10">
        <img
          src="/images/team.jpg"
          alt="ElDoradoFx traders"
          class="
            w-full
            rounded-2xl
            shadow-[0_30px_90px_rgba(0,0,0,0.6)]
          "
        />
      </div>

    </div>

  </Container>
</Section>
