---
import Section from "../../ui/Section.astro";
import Container from "../../ui/Container.astro";
import Heading from "../../ui/Heading.astro";
import Text from "../../ui/Text.astro";
import Badge from "../../ui/Badge.astro";
import Button from "../../ui/Button.astro";
import PhoneMockup from "../../react/PhoneMockup";
import TelegramIcon from "../../ui/TelegramIcon.astro";
import TelegramButton from "../../ui/TelegramButton.astro";
import { useTranslations, getLanguageFromPath } from "../../../i18n/utils";

const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);
---

<Section class="relative py-28 overflow-hidden reveal fade">
  <Container>

    <div class="text-center mb-20">
      <Badge variant="gold" class="mb-4 flex items-center justify-center mx-auto">
        Telegram <TelegramIcon class="w-4 h-4 ml-2 -mt-1" />
      </Badge>

      <Heading level={2} class="mb-4">
        {t("contact.telegram.title")}
      </Heading>

      <Text muted class="max-w-2xl mx-auto">
        {t("contact.telegram.description")}
      </Text>
    </div>

  
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center ">

      
      <div class="flex justify-center lg:justify-start reveal from-left">
        <div class="relative translate-x-4">
          <PhoneMockup 
          src="/telegram_video.mp4"
          poster="/social_images/tl_image_7.webp"
          client:visible />
        </div>
      </div>

     
      <div class="flex flex-col gap-6 max-w-xl reveal from-right">

        <Heading level={3}>
          {t("contact.telegram.oneChannel")}
        </Heading>

        <Text muted>
          {t("contact.telegram.oneChannelDescription")}
        </Text>

        <ul class="text-sm text-white/70 space-y-2">
          <li>{t("contact.telegram.marketContext")}</li>
          <li>{t("contact.telegram.executionReasoning")}</li>
          <li>{t("contact.telegram.freePremium")}</li>
        </ul>

        <Text muted class="text-xs">
          {t("contact.telegram.accessWarning")}
        </Text>

        <div class="pt-4 w-1/2">
          <TelegramButton
            type="channel"
            username="eldoradofxfree"
          >
            {t("contact.telegram.accessFreeSignals")}
          </TelegramButton>
        </div>

      </div>

    </div>

  </Container>
</Section>
