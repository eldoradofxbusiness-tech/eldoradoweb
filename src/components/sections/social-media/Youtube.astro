---
import Section from "../../../components/ui/Section.astro";
import Container from "../../../components/ui/Container.astro";
import Badge from "../../../components/ui/Badge.astro";
import Heading from "../../../components/ui/Heading.astro";
import Text from "../../../components/ui/Text.astro";
import Button from "../../../components/ui/Button.astro";
import YouTubeIcon from "../../../components/ui/YoutubeIcon.astro";
import { useTranslations, getLanguageFromPath } from "../../../i18n/utils";

const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);

const {
  videoUrl = "https://www.youtube.com/embed/Jfk3nkg-kMo",
  channelUrl = "https://www.youtube.com",
} = Astro.props;
---

<Section class="py-20 relative overflow-hidden reveal fade">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">

      <div class="relative aspect-video rounded-2xl overflow-hidden border border-white/10 reveal from-left ">
        <iframe
          src={videoUrl}
          class="w-full h-full"
          allowfullscreen
        />

        <div
          class="
            pointer-events-none
            absolute inset-x-8 -bottom-6 h-20
            bg-[radial-gradient(ellipse_at_center,rgba(255,215,120,0.25),transparent_70%)]
            blur-[30px]
          "
        ></div>
      </div>

      <!-- TEXT -->
      <div class="flex flex-col gap-6 reveal from-right">
        <Badge variant="gold" class="w-fit flex items-center justify-center mx-auto">
          YouTube <YouTubeIcon class="w-4 h-4 ml-2 -mt-1" />
        </Badge>

        <Heading level={2}>
          {t("contact.youtube.title")}
        </Heading>

        <Text muted>
          {t("contact.youtube.description")}
        </Text>

        <!-- IMAGE STRIP -->
        <div class="grid grid-cols-2 gap-4 mt-2">
          <img
            src="/social_images/youtube_social_image1.webp"
            class="rounded-xl opacity-80"
            alt=""
          />
          <img
             src="/social_images/youtube_social_image2.webp"
            class="rounded-xl opacity-80"
            alt=""
          />
        </div>

    </div>
  </Container>
</Section>
