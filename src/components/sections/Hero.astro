---
import Section from "../ui/Section.astro";
import Container from "../ui/Container.astro";
import Badge from "../ui/Badge.astro";
import Heading from "../ui/Heading.astro";
import Text from "../ui/Text.astro";
import Button from "../ui/Button.astro";
import PhoneMockup from "../react/PhoneMockup";
import ParallaxElement from "../react/ParallaxElement";
import ScrollReveal from "../react/ScrollReveal";
---

<Section class="relative py-24 lg:py-28 pb-16 lg:pb-28 overflow-hidden rounded-br-[2.5rem]">

  <!-- RAYO DE SOL DIAGONAL (WITH PARALLAX) -->
  <ParallaxElement speed={0.15} client:load>
    <div
      class="
        pointer-events-none
        absolute -top-[10%] left-1/2
        w-[80%] h-[25%]
        -translate-x-1/2
        rotate-[10deg]
        z-0
        bg-[linear-gradient(to_right,transparent_20%,rgba(255,215,120,0.35)_45%,rgba(255,215,120,0.55)_50%,rgba(255,215,120,0.35)_55%,transparent_80%)]
        blur-[80px]
      "
    ></div>
  </ParallaxElement>

  <!-- GLOW RADIAL (WITH PARALLAX) -->
  <ParallaxElement speed={0.2} client:load>
    <div
      class="
        absolute w-500 h-[80%]
        -translate-y-3 -translate-x-80
        rounded-br-[2.5rem]
        z-10
        bg-[radial-gradient(80%_80%_at_100%_100%,rgba(255,215,120,0.45),rgba(255,215,120,0.25)_8%,rgba(185,138,37,0.15)_35%,transparent_90%)]
      "
    ></div>
  </ParallaxElement>

  <Container>
    <div
      class="
        relative z-20
        grid grid-cols-1 lg:grid-cols-2
        gap-12
        items-center
        w-full max-w-7xl
      "
    >

      <!-- LEFT CONTENT -->
      <div class="flex flex-col gap-7">
        <ScrollReveal client:load>
          <Badge class="badge-glow w-fit">
            Trading signals & automation
          </Badge>
        </ScrollReveal>

        <ScrollReveal delay={100} client:load>
          <Heading level="1" class="leading-tight max-w-xl">
            Professional trading
            <br />
            signals & automation
          </Heading>
        </ScrollReveal>

        <ScrollReveal delay={200} client:load>
          <Text class="max-w-xl text-(--color-grey-light)">
            High-quality market signals and automation,
            built around risk management and disciplined execution.
          </Text>
        </ScrollReveal>

        <ScrollReveal delay={300} client:load>
          <div class="flex gap-3 mt-2">
            <Button variant="primary">
              Join Telegram
            </Button>

            <Button variant="secondary">
              View services
            </Button>
          </div>
        </ScrollReveal>
      </div>

      <!-- PHONE DESKTOP -->
      <div class="hidden lg:flex justify-center">
        <!-- ⬇️ SOLO ajustado el X para acercarlo al texto -->
        <div class="translate-x-10 -translate-y-10 scale-[1.05]">
          <PhoneMockup client:visible />
        </div>
      </div>

    </div>

    <!-- PHONE MOBILE -->
    <!-- ⬇️ MENOS ESPACIO VERTICAL -->
    <div class="lg:hidden mt-16 flex justify-center scale-90">
      <PhoneMockup client:visible />
    </div>

  </Container>
</Section>
