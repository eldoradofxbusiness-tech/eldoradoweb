---
import "../styles/globals.css";
import TelegramIcon from "../components/ui/TelegramIcon.astro";
import Logo from "../components/react/Logo";
import Divider from "../components/ui/Divider.astro";
import { useTranslations, getLanguageFromPath } from "../i18n/utils";
import { LanguageProvider } from "../components/react/LanguageContext";
import { ui } from "../i18n/ui";

interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title = "TradingCompany â€“ Professional Insights",
  description = "Institutional grade trading setups from London.",
  ctaText = "JOIN FREE TELEGRAM",
  ctaHref = "https://t.me/your_link"
} = Astro.props;

const lang = getLanguageFromPath(Astro.url.pathname);
const t = useTranslations(lang);
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Play:wght@400;700&family=League+Spartan:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body class=" text-white antialiased selection:bg-yellow-500/30">
    <LanguageProvider lang={lang} translations={ui[lang]} client:load>
    <header class="absolute top-0 left-0 right-0 z-50 py-6">
      <div class="max-w-7xl mx-auto px-6 flex justify-center md:justify-start">
       <Logo client:load />
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="py-12">
      <Divider/>
      <div class="max-w-5xl mx-auto px-6 text-center">
        <p class="text-[10px] text-white/30 leading-relaxed uppercase tracking-widest">
          {t("footer.riskWarning")}
        </p>
      </div>
    </footer>

    <div class="fixed bottom-0 left-0 right-0 z-[100] p-4 md:hidden pointer-events-none">
      <div class="max-w-md mx-auto pointer-events-auto">
        <a
          href={ctaHref}
          class="flex items-center justify-center gap-3 w-full 
                 bg-gradient-to-b from-yellow-400 to-yellow-600 
                 text-black py-4 rounded-2xl font-bold text-lg
                 shadow-[0_20px_40px_rgba(185,138,37,0.4)]
                 active:scale-95 transition-transform"
        >
          <TelegramIcon size={24} />
          {ctaText}
        </a>
      </div>
    </div>
    </LanguageProvider>
  </body>
</html>