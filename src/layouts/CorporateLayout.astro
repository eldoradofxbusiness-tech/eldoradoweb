---
import "../styles/globals.css";
import Navbar from "../components/react/Navbar";
import Footer from "../components/sections/Footer.astro";
import ParticlesBackground from "../components/ui/ParticlesBackground.astro";
import { useTranslations, getLanguageFromPath } from "../i18n/utils";
import { LanguageProvider } from "../components/react/LanguageContext";
import { ui } from "../i18n/ui";
import MetaPixel from "../components/MetaPixel.astro";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";

const {
  title = "El DoradoFx - Trading Solutions",
  description = "Professional trading solutions and market insights.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pathName = Astro.url.pathname;
const isEspanol = pathName.startsWith("/es") || pathName.startsWith("/es/");
const lang = isEspanol ? "es" : "en";
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/og-image.jpg" /> <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />
        <MetaPixel />
    <GoogleAnalytics />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "ElDorado FX",
        "url": "https://www.eldoradofx.com",
        "logo": "https://www.eldoradofx.com/logo.webp",
        "sameAs": [
          "https://t.me/eldoradofxfree"
          "https://www.youtube.com/@ElDoradoFX-TradingGroup-u4u"
        ],
        "description": "Professional trading solutions, XAUUSD signals, and automated trading bots."
      }
    </script>
  </head>

  <body class="min-h-screen bg-canvas antialiased">
    <LanguageProvider lang={lang} translations={ui[lang]} client:load>
      <header class="relative z-[1000]">
        <Navbar client:load lang={lang as "en" | "es"} translations={ui[lang]} />
      </header>

      <main class="relative z-10">
        <ParticlesBackground count={80} color="#FFD700" />
        <slot />
      </main>

      <Footer />
    </LanguageProvider>
    <script>
      import { initReveal } from "../helpers/reveal";
      window.addEventListener("DOMContentLoaded", () => {
        initReveal();
      });
    </script>
  </body>
</html>