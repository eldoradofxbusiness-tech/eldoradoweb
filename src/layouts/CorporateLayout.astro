---
import "../styles/globals.css";
import Navbar from "../components/react/Navbar";

const {
  title = "El DoradoFx - Trading Solutions",
  description = "Professional trading solutions and market insights.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body class="min-h-screen bg-black text-white antialiased">
    <!-- HEADER -->
    <header class="">
      <Navbar client:load />
    </header>

    <!-- MAIN -->
    <main class="relative">
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="mt-24 border-t border-(--color-grey)">
      <div class="mx-auto max-w-7xl px-6 py-10 text-sm text-(--color-grey-light)">
        <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
          <span>Â© {new Date().getFullYear()} El DoradoFx. All rights reserved.</span>

          <div class="flex gap-6">
            <a href="/privacy" class="hover:text-white transition">Privacy</a>
            <a href="/terms" class="hover:text-white transition">Terms</a>
            <a href="/contact" class="hover:text-white transition">Contact</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
