---
import CorporateLayout from "../layouts/CorporateLayout.astro";

import Section from "../components/ui/Section.astro";
import Container from "../components/ui/Container.astro";
import Heading from "../components/ui/Heading.astro";
import Text from "../components/ui/Text.astro";
import Badge from "../components/ui/Badge.astro";
import Divider from "../components/ui/Divider.astro";

import HowWeGotHere from "../components/sections/about/HowWeGotHere.astro";
import Team from "../components/sections/about/Team.astro";
import CommunityBento from "../components/sections/about/CommunityBento.astro";
---

<CorporateLayout title="ElDoradoFx — About">

  <!-- HERO -->
  <Section class="relative pt-32 pb-20">
    <Container class="text-center max-w-3xl">

      <Badge variant="gold" class="mb-6">
        About
      </Badge>

      <Heading level={1} class="mb-6">
        Structure, not hype
      </Heading>

      <Text muted class="text-lg leading-relaxed">
        ElDoradoFx is built around a single principle: risk comes first.
        No promises, no shortcuts — just a clear framework for how markets
        are analyzed and trades are executed.
      </Text>

    </Container>
  </Section>

  <!-- HOW WE GOT HERE -->
  <HowWeGotHere />

  <Divider class="my-20" />

  <!-- TEAM -->
  <Team />

  <Divider class="my-20" />

  <!-- COMMUNITY -->
  <CommunityBento
    badge="Community"
    title="What the community says"
    description="Real conversations from inside the group. No performance claims, no screenshots of profits — just discussion, structure and process."
    mainLabel="Inside the private Telegram group"
    images={[
      "https://images.pexels.com/photos/7567440/pexels-photo-7567440.jpeg",
      "https://images.pexels.com/photos/7567460/pexels-photo-7567460.jpeg",
      "https://images.pexels.com/photos/7567447/pexels-photo-7567447.jpeg",
      "https://images.pexels.com/photos/7567458/pexels-photo-7567458.jpeg",
      "https://images.pexels.com/photos/7567462/pexels-photo-7567462.jpeg"
    ]}
    disclaimer="Screens shown for illustrative purposes only. Conversations reflect discussion, not financial advice or results."
  />

</CorporateLayout>
