---
import LandingLayout from "../../../layouts/LandingLayout.astro";
import Section from "../../../components/ui/Section.astro";
import Container from "../../../components/ui/Container.astro";
import Heading from "../../../components/ui/Heading.astro";
import Text from "../../../components/ui/Text.astro";
import Button from "../../../components/ui/Button.astro";
import Badge from "../../../components/ui/Badge.astro";
import TelegramIcon from "../../../components/ui/TelegramIcon.astro";
import ParticlesBackground from "../../../components/ui/ParticlesBackground.astro";
import HeroGlow from "../../../components/ui/HeroGlow.astro";
import Card from "../../../components/ui/Card.astro";
import Divider from "../../../components/ui/Divider.astro";
import CountdownTimer from "../../../components/react/CountdownTimer";
import { Zap, GraduationCap, TrendingUp, ShieldCheck, Clock } from "lucide-react";

const MASTERCLASS_DISCOUNT_EXPIRY = "2026-01-25T23:59:59"; // Placeholder para lógica evergreen
---

<LandingLayout 
  title="Free Signals + 50% Masterclass Discount | ElDoradoFX"
  description="Join our free Telegram and unlock a 50% discount on our Elite Trading Masterclass."
  ctaText="CLAIM YOUR DISCOUNT NOW"
>
  <div class="fixed top-0 left-0 right-0 z-[100] bg-yellow-500 py-2 px-4 text-black overflow-hidden shadow-xl">
    <div class="max-w-7xl mx-auto flex items-center justify-center gap-4">
      <Clock size={16} class="animate-pulse" />
      <p class="text-[10px] md:text-xs font-black uppercase tracking-[0.2em]">
        50% OFF Masterclass Ends In: <span class="underline">Join Free Telegram to Unlock</span>
      </p>
    </div>
  </div>

  <Section class="relative min-h-screen flex items-center bg-black overflow-hidden pt-28">
    <div class="absolute inset-0 grid-bg opacity-20 mask-circle"></div>
    <HeroGlow />
    <ParticlesBackground count={30} color="#B98A25" />
    
    <Container class="relative z-20">
      <div class="flex flex-col items-center text-center max-w-5xl mx-auto">
        <Badge variant="glow" class="mb-8 py-2 px-8 border-yellow-500/30 bg-black/50 text-yellow-400 backdrop-blur-xl tracking-[0.3em]">
          EXCLUSIVE EDUCATION OFFER INSIDE
        </Badge>
        
        <Heading level={1} class="text-5xl md:text-[90px] mb-8 font-black uppercase italic leading-[0.85] text-white tracking-tighter">
          GET FREE DAILY SIGNALS — <br/>
          <span class="text-yellow-400 drop-shadow-[0_0_40px_rgba(185,138,37,0.5)]">AND UNLOCK 50% OFF OUR MASTERCLASS</span>
        </Heading>
        
        <Text class="text-xl md:text-2xl text-white/70 mb-12 max-w-4xl leading-tight">
          Join <span class="text-white font-bold">ElDoradoFX – Gratis</span>, trusted by 1,000+ traders for XAUUSD & BTCUSD signals — and get insider access to a 50% discount on our elite masterclass.
        </Text>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 w-full max-w-4xl">
          {[
            { t: "2–3 SIGNALS/DAY", icon: TrendingUp },
            { t: "87% WIN RATE", icon: Zap },
            { t: "EXCLUSIVE EDUCATION", icon: GraduationCap }
          ].map(item => (
            <div class="flex flex-col items-center gap-3 p-6 rounded-2xl bg-white/[0.03] border border-white/10 backdrop-blur-sm">
              <item.icon size={24} class="text-yellow-500" />
              <span class="text-xs uppercase tracking-widest font-black text-white">{item.t}</span>
            </div>
          ))}
        </div>

        <Button variant="primary" href="https://t.me/your_link" class="px-16 py-8 text-2xl font-black italic tracking-tighter uppercase group shadow-[0_0_50px_rgba(185,138,37,0.4)]">
          <TelegramIcon class="mr-4 group-hover:scale-110 transition-transform" />
          JOIN THE FREE GROUP & CLAIM DISCOUNT
        </Button>
        <p class="mt-6 text-[10px] tracking-[0.4em] text-white/40 font-bold uppercase">No forms. No spam. Just free value.</p>
      </div>
    </Container>
  </Section>

  <Section class="py-32 bg-canvas relative border-y border-white/5">
    <Container>
      <div class="grid lg:grid-cols-2 gap-20 items-center">
        <div>
          <Badge variant="gold" class="mb-6">WHY THIS GROUP IS DIFFERENT</Badge>
          <Heading level={2} class="text-5xl md:text-7xl font-black italic uppercase tracking-tighter text-white mb-10">
            More Than Just <br/> <span class="text-yellow-400 font-normal">A Teaser Group</span>
          </Heading>
          
          <div class="space-y-6">
            {[
              "Daily signals with precision entries (XAUUSD & BTCUSD only)",
              "Market insights from two pro traders with 6+ years experience",
              "Broker bonuses + exclusive partner offers",
              "100% free — no strings attached"
            ].map(point => (
              <div class="flex items-center gap-4 group">
                <div class="h-6 w-6 rounded-lg bg-yellow-500/10 border border-yellow-500/30 flex items-center justify-center shrink-0 group-hover:bg-yellow-500 group-hover:text-black transition-colors duration-300">
                  <TrendingUp size={12} />
                </div>
                <Text class="text-white/80 font-bold uppercase tracking-tight text-sm md:text-base">{point}</Text>
              </div>
            ))}
          </div>

          <div class="mt-12 p-8 rounded-3xl bg-yellow-500/10 border border-yellow-500/20">
             <div class="flex items-center gap-4 mb-4">
                <GraduationCap class="text-yellow-500" size={32} />
                <h3 class="text-2xl font-black italic text-white uppercase tracking-tighter">PLUS: 50% OFF MASTERCLASS</h3>
             </div>
             <Text muted class="italic leading-relaxed">Available only to group members. We don't just drop signals — we teach you the "why" behind every institutional move.</Text>
          </div>
        </div>

        <div class="relative bg-white/[0.02] border border-white/10 rounded-[3rem] p-12 shadow-2xl overflow-hidden aspect-square flex flex-col justify-center text-center">
           <div class="absolute inset-0 grid-bg opacity-10"></div>
           <Heading level={3} class="text-white text-3xl mb-4 italic uppercase">Meet the Mentors</Heading>
           <Divider class="my-8 opacity-20" />
           <div class="space-y-4">
              <Text class="text-white font-bold">Ricardo – Master Scalper</Text>
              <Text class="text-white font-bold">MasterKelvin – Swing Specialist</Text>
           </div>
           <Text muted class="mt-8 text-sm tracking-widest uppercase">Latinos based in London. <br/> 6+ Years Consistent Profit.</Text>
           <div class="mt-8 h-48 bg-white/5 rounded-2xl flex items-center justify-center border border-white/10 italic text-[10px] text-white/20 uppercase tracking-[0.3em]">
             Mentor Introduction Video Placeholder
           </div>
        </div>
      </div>
    </Container>
  </Section>

  <Section class="py-32 bg-black relative">
    <Container size="narrow" class="text-center">
      <Heading level={2} class="text-5xl md:text-7xl font-black uppercase italic tracking-tighter text-white mb-6">
        Serious About <span class="text-yellow-400 italic font-black">Learning to Trade?</span>
      </Heading>
      <Text class="text-lg text-white/60 mb-12 uppercase tracking-widest font-bold">Your 50% Masterclass Discount Expires in:</Text>
      
      <div class="mb-16">
        <CountdownTimer client:load targetDate={MASTERCLASS_DISCOUNT_EXPIRY} />
      </div>

      <div class="grid md:grid-cols-2 gap-6 text-left mb-16">
        {[
          "XAUUSD & BTCUSD session breakdown",
          "Exact risk/reward setups & sniper entries",
          "Spot high-probability trades daily",
          "Perfect for side hustlers & beginners"
        ].map(point => (
          <div class="p-6 rounded-2xl bg-white/[0.03] border border-white/10 flex items-center gap-4">
            <ShieldCheck class="text-yellow-500 shrink-0" />
            <span class="text-[10px] md:text-xs font-black uppercase tracking-widest text-white">{point}</span>
          </div>
        ))}
      </div>

      <Button variant="primary" href="https://t.me/your_link" class="w-full px-16 py-8 text-2xl font-black italic tracking-tighter uppercase shadow-[0_0_60px_rgba(185,138,37,0.3)]">
        JOIN THE FREE TELEGRAM GROUP NOW
      </Button>
      
      <p class="mt-8 text-white/30 text-xs font-bold uppercase tracking-[0.4em] italic leading-loose">
        Thousands are already inside, profiting daily. <br/>
        Get signals, get smarter, and save big — all from your phone.
      </p>
    </Container>
  </Section>
</LandingLayout>